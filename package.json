{
  "name": "expresso-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "webpack --mode development",
    "build": "webpack --mode production",
    "start": "npm-run-all --parallel devserver watch:sass",
    "watch:sass": "node-sass sass/main.scss assets/css/main.css -watch",
    "devserver": "lite-server",
    "compile:sass": "node-sass sass/main.scss assets/css/main.comp.css",
    "concat:css": "concat -o assets/css/main.concat.css assets/css/main.comp.css",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" assets/css/main.comp.css -o assets/css/main.prefix.css",
    "compress:css": "node-sass assets/css/main.prefix.css assets/css/main.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.7.4",
    "babel-cli": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "concat": "^1.0.3",
    "lite-server": "^2.5.4",
    "live-server": "^1.2.1",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  }
}
